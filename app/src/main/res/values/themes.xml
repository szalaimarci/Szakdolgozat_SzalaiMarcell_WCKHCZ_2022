<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Szakdoga" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_brown</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorPrimaryVariant">@color/light_brown</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- Customize your theme here. -->
        <item name="android:homeAsUpIndicator">@drawable/back_button_image</item>
        <item name="actionOverflowButtonStyle">@style/Threedot_color</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Threedot_color" parent="Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="tint">@color/black</item>
    </style>
    <style name="CMOptionsMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/strong_brown</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:buttonBarNegativeButtonStyle" tools:targetApi="lollipop">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle" tools:targetApi="lollipop">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/black</item>
    </style>


</resources>